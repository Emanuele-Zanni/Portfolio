---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/Github.astro";
import Experience from "../components/Experience.astro";
import Section from "../components/Section.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import TechsIcon from "../icons/Techs.astro";
import Technologies from "../components/Technologies.astro";
---

<Layout
  title=" Emanuele´s Portfolio - Desarrollador y Programador Web con 99 Años de experiencia"
  description="Contrata a Emanuele para crear aplicaciones backend robustas y sostenibles"
>
  <main class="px-4">
    <Section class="py-44 pb-32">
      <div class="flex flex-row">
        <img
          class="rounded-full size-20 mb-4 mr-7"
          src="https://avatars.githubusercontent.com/u/158765694?v=4"
          alt="Photo"
        />

        <h1
          class="items-center text-white text-3xl font-bold flex flex-row gap-x-4 pt-2.5 mb-2
          md:text-4xl
          lg:pb-10 lg:text-5xl"
        >
          Hola, soy Emanuele <a
            class="flex justify-center items-center"
            href="https://www.linkedin.com/in/emanuele-zanni/"
            target="_blank"
            rel="noopener"
          >
            <Badge>Disponible para trabajar</Badge>
          </a>
        </h1>
      </div>

      <h2 class="text-xl lg:text-2xl text-2xl text-wrap max-w-[700px]">
        <span>+3 Años de Experiencia.</span>
        <span class="text-yellow-200/90"
          >Desarrollador Web Full Stack y Analista de Sistemas</span
        >
        de
        <span class="text-blue-400/100">
          Capital Federal, Buenos Aires, Argentina
        </span>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/emanuele-zanni/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>

        <SocialPill href="https://github.com/Emanuele-Zanni">
          <GithubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>

        <SocialPill href="mailto:emazanni2022@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          Emazanni2022@gmail.com
        </SocialPill>
      </nav>
    </Section>

    <Section id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </Section>

    <Section id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center"
      >
        <BriefcaseIcon class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </Section>

    <Section id="tecnologias">
      <div></div>
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center"
      >
        <TechsIcon class="size-7" />
        Tecnologias
      </h2>
      <Technologies />
    </Section>
  </main>
</Layout>
