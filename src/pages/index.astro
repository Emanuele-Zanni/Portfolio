---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/general/LinkedIn.astro";
import MailIcon from "../icons/general/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/general/Github.astro";
import Experience from "../components/Experience.astro";
import Section from "../components/Section.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import TechsIcon from "../icons/Techs.astro";
import Technologies from "../components/Technologies.astro";
---

<Layout
  title=" Emanuele Zanni - Desarrollador Web Full Stack y Analista de Sistemas con +3 Años de experiencia"
  description="Confía en Emanuele para crear aplicaciones backend robustas, escalables y pensadas a largo plazo. Con un enfoque en la eficiencia, la seguridad y la sostenibilidad, cada solución está diseñada para adaptarse a las necesidades de tu negocio y evolucionar junto con la tecnología, garantizando un rendimiento óptimo y fiable en cada etapa."
>
  <main>
    <Section class="py-44 pb-32">
      <div class="flex flex-col items-center text-center lg:items-start">
        <div class="flex flex-row">
          <img
            class="rounded-full size-20 mb-4 mr-7"
            src="https://avatars.githubusercontent.com/u/158765694?v=4"
            alt="Photo"
          />

          <h1
            class="items-center text-white text-3xl font-bold flex flex-row gap-x-4 pt-2.5 mb-2
          text-5xl
          lg:pb-10 lg:text-5xl"
          >
            Hola, soy Emanuele <a
              class="flex justify-center items-center"
              href="https://www.linkedin.com/in/emanuele-zanni/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Badge>Disponible para trabajar</Badge>
            </a>
          </h1>
        </div>

        <h2 class="lg:text-2xl text-3xl text-wrap max-w-[700px]">
          <span>+3 Años de Experiencia.</span>
          <span class="text-yellow-200/90"
            >Desarrollador Web Full Stack y Analista de Sistemas</span
          >
          de
          <span class="text-blue-400/100">
            Capital Federal, Buenos Aires, Argentina
          </span>
        </h2>

        <nav class="flex gap-9 md:gap-4 mt-16 lg:mt-8 flex-wrap justify-center">
          <SocialPill href="https://www.linkedin.com/in/emanuele-zanni/">
            <LinkedInIcon class="size-14 md:size-6" />
            <span class="text-3xl md:text-base">LinkedIn</span>
          </SocialPill>

          <SocialPill href="https://github.com/Emanuele-Zanni">
            <GithubIcon class="size-14 md:size-6" />
            <span class="text-3xl md:text-base">GitHub</span>
          </SocialPill>

          <SocialPill href="mailto:emazanni2022@gmail.com">
            <MailIcon class="size-14 md:size-6" />
            <span class="text-3xl md:text-base">Emazanni2022@gmail.com</span>
          </SocialPill>
        </nav>
      </div>
    </Section>

    <Section id="proyectos" class="px-3 lg:px-0">
      <h2
        class="text-[2.9rem] lg:text-[2.6rem] font-semibold mb-6 flex gap-x-3 items-center justify-center"
      >
        <CodeIcon class="size-9" />
        Proyectos
      </h2>
      <Projects />
    </Section>

    <Section id="experiencia">
      <h2
        class="text-[2.9rem] lg:text-[2.6rem] font-semibold mb-6 flex gap-x-3 items-center justify-center"
      >
        <BriefcaseIcon class="size-9" />
        Experiencia Laboral
      </h2>
      <Experience />
    </Section>

    <Section id="tecnologias">
      <h2
        class="text-[2.9rem] lg:text-[2.6rem] font-semibold mb-6 flex gap-x-3 items-center justify-center"
      >
        <TechsIcon class="size-9" />
        Tecnologias
      </h2>
      <Technologies />
    </Section>
  </main>
</Layout>
