---
import JavaScript from "../icons/tech/langs/Javascript.astro";
import Github from "../icons/general/Github.astro";
import Link from "../icons/Link.astro";
import ecommerce from "../icons/ecommerce.png";

import { OTHERS } from "../db/TechIcons";
import { LANGS } from "../db/TechIcons";
import { FRAMEWORKS } from "../db/TechIcons";

const OtherIcons = OTHERS.map((item) => ({
  name: item.name,
  class: item.class,
  icon: item.icon,
}));

const LangsIcons = LANGS.map((item) => ({
  name: item.name,
  class: item.class,
  icon: item.icon,
}));

const FrameIcons = FRAMEWORKS.map((item) => ({
  name: item.name,
  class: item.class,
  icon: item.icon,
}));

export const TECHS = {
  JS: {
    name: "Javascript",
    class: "bg-[#3b3b3b] text-white",
    icon: JavaScript,
  },
};

export const PROJECTS = [
  {
    title: "Dionisio Wine Company",
    decription:
      "Este proyecto de e-commerce fue el primer gran desafío que abordé en colaboración con un equipo de cinco personas. Más que un simple desarrollo, fue una experiencia enriquecedora que me introdujo de lleno en la dinámica del trabajo en equipo, donde la comunicación y la coordinación fueron clave para alcanzar nuestros objetivos. Además, me permitió perfeccionar el uso de GitHub, aprendiendo a realizar commits efectivos y a gestionar el flujo de trabajo de manera profesional. Este proyecto no solo fortaleció mis habilidades técnicas, sino que también me enseñó la importancia de una colaboración fluida y bien organizada.",
    link: "www.youtube.com",
    github: "www.google.com",
    image: ecommerce,
    tags: [
      FRAMEWORKS[0],
      FRAMEWORKS[6],
      FRAMEWORKS[2],
      LANGS[2],
      LANGS[1],
      OTHERS[0],
      OTHERS[3],
      OTHERS[4],
      OTHERS[5],
      OTHERS[8],
      OTHERS[9],
      OTHERS[10],
    ],
  },
];

// console.log(ecommerce);
// import Carousel from "../components/GlideCarousel.astro";
---

<!--! TAMBIEN SE PUEDE HACER DESTRUCTURING EN VEZ DE USTAR "project" y acceder a las propiedades dentro del objeto  -->{
  PROJECTS.map((project) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2 ">
        {project.title}
      </h3>
      <p class="text-base mb-4 text-pretty text-white/85">
        {project.decription}
      </p>
      <ul class="flex flex-wrap gap-x-4 gap-y-3 flex-row mb-2">
        {project.tags.map((tag) => {
          const IconComponent = tag.icon;
          return (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-m items-center ${tag.class} py-2 px-3`}
              >
                <IconComponent class="size-4" />
                {tag.name}
              </span>
            </li>
          );
        })}
      </ul>

      <div class="flex my-4">
        <img
          class="w-[200px] h-[150px] rounded shadow-2xl shadow-white/10"
          src={project.image.src}
          alt="Captura de pantalla del proyecto"
        />
      </div>
      <ul class="flex gap-x-4 flex-row mb-2">
        <a
          href="https://github.com/Emanuele-Zanni/Dionisio-Wine-Company"
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="flex gap-x-2 rounded-full text-m items-center py-2 px-3 border hover:scale-[1.15] ease-in-out duration-200 hover:bg-white/10">
            <Github class="size-7" />
          </span>
        </a>

        <a
          href="https://dionisiowines.netlify.app/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="flex gap-x-2 rounded-full text-m items-center py-2 px-3 border hover:scale-[1.15] ease-in-out duration-200 hover:bg-white/10">
            <Link class="size-7" />
          </span>
        </a>
      </ul>
    </article>
  ))
}

